<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    style="?android:attr/buttonBarStyle"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/blue">

<LinearLayout
android:layout_width="match_parent"
android:layout_height="wrap_content"
android:orientation="horizontal">

<ImageView
    android:id="@+id/icecream_image"
    android:layout_width="64dp"
    android:layout_height="64dp"
    android:contentDescription="@string/icecream_description"
    android:src="@drawable/icecream"
    tools:ignore="ImageContrastCheck" />

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <CheckBox
        android:id="@+id/icecream_checkbox"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:buttonTint="@color/black"
        android:minHeight="48dp"
        android:text="@string/icecream_name"
        android:textColor="@color/black" />

    <TextView
        android:id="@+id/icecream_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/icecream_description"
        android:textColor="@color/black" />

    <TextView
        android:id="@+id/icecream_price"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/icecream_price"
        android:textColor="@color/black" />
</LinearLayout>
</LinearLayout>

    <!-- pastry Product -->
<LinearLayout
android:layout_width="match_parent"
android:layout_height="wrap_content"
android:orientation="horizontal">

<ImageView
    android:id="@+id/pastry_image"
    android:layout_width="64dp"
    android:layout_height="64dp"
    android:contentDescription="@string/pastry_description"
    android:src="@drawable/pastry"
    tools:ignore="ImageContrastCheck" />

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <CheckBox
        android:id="@+id/pastry_checkbox"
        android:layout_width="98dp"
        android:layout_height="wrap_content"
        android:minHeight="48dp"
        android:text="@string/pastry_name"
        android:buttonTint="@color/black"
        android:textColor="@color/black"/>

    <TextView
        android:id="@+id/pastry_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/pastry_description"
        android:textColor="@color/black" />

    <TextView
        android:id="@+id/pastry_price"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/pastry_price"
        android:textColor="@color/black" />
</LinearLayout>
</LinearLayout>

<LinearLayout
style="?android:attr/buttonBarButtonStyle"
android:layout_width="match_parent"
android:layout_height="wrap_content"
android:orientation="horizontal"
android:gravity="center"
android:paddingTop="50dp">

<Button
    android:id="@+id/add_to_cart_button"
    style="?android:attr/buttonBarButtonStyle"
    android:layout_width="150dp"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:background="@drawable/rounded_button"
    android:text="@string/add_to_cart"
    android:textColor="@color/blue" />
<Button
    android:id="@+id/checkout_button"
    style="?android:attr/buttonBarButtonStyle"
    android:background="@drawable/rounded_button"
    android:layout_width="150dp"
    android:layout_height="wrap_content"
    android:text="@string/checkout"
    android:layout_marginStart="16dp"
    android:textColor="@color/blue"/>
</LinearLayout>
    </LinearLayout>
