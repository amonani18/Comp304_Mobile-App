<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/blue">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/wrap_image"
            android:layout_width="64dp"
            android:layout_height="match_parent"
            android:contentDescription="@string/wrap_description"
            android:src="@drawable/wrap"
            tools:ignore="ImageContrastCheck" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <CheckBox
                android:id="@+id/wrap_checkbox"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:buttonTint="@color/black"
                android:minHeight="48dp"
                android:text="@string/wrap_name"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/wrap_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/wrap_description"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/wrap_price"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/wrap_price"
                android:textColor="@color/black" />
        </LinearLayout>
    </LinearLayout>

    <!-- burrito Product -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/burrito_image"
            android:layout_width="64dp"
            android:layout_height="match_parent"
            android:contentDescription="@string/burrito_description"
            android:src="@drawable/burrito"
            tools:ignore="ImageContrastCheck" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <CheckBox
                android:id="@+id/burrito_checkbox"
                android:layout_width="98dp"
                android:layout_height="wrap_content"
                android:minHeight="48dp"
                android:text="@string/burrito_name"
                android:buttonTint="@color/black"
                android:textColor="@color/black"/>

            <TextView
                android:id="@+id/burrito_description"
                android:layout_width="match_parent"
                android:layout_height="37dp"
                android:text="@string/burrito_description"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/burrito_price"
                android:layout_width="match_parent"
                android:layout_height="43dp"
                android:text="@string/burrito_price"
                android:textColor="@color/black" />
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        style="?android:attr/buttonBarStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:paddingTop="30dp">

        <Button
            android:id="@+id/add_to_cart_button"
            style="?android:attr/buttonBarButtonStyle"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_button"
            android:text="@string/add_to_cart"
            android:textColor="#80DEEA" />

        <Button
            android:id="@+id/checkout_button"
            style="?android:attr/buttonBarButtonStyle"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:background="@drawable/rounded_button"
            android:text="@string/checkout"
            android:textColor="#80DEEA" />
    </LinearLayout>
</LinearLayout>
